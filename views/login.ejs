<%- include('partials/header') %>

<style>
    body {
        background-image: url("../images/mountains.jpg"); /* background-image: url("http://localhost:3000/images/welcome.jpg"); */
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;

        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        transition: .5s;
    }
    .container {
        position: relative;
        width: 50rem;
        height: 31.25rem;
        margin: 20px;      
    }
    .background-1 {
        position: absolute center;
        top: 40px;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 420px;
        background: rgba(255,255,255,.2);
        box-shadow: 0px 5px 45px rgba(0,0,0,.5);
    }
    
    .form-control {
        border-radius: 1rem;
        background: rgba(0,0,0,.5);
        margin: 2rem 0 2rem 0;       
    }

    /* .form-control ::placeholder {
        color: white;
        opacity: 1;
    } */

    .signin-text {
        text-align: center;
    }

    .button {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    
    .btn {
        margin: auto;
    }


</style>


<div class="container">
    <div class="background-1">
        <form action="/home" method="POST">
            <h2 class="signin-text">Sign In</h2>
            <div class="form-group">
              <input type="email" class="form-control" placeholder="Email" name="email">
              <input type="password" class="form-control" name="password" placeholder="Password">
            </div>
            
            <div class="button">
                <button type="submit" class="btn btn-dark register">Register</button>
                <button type="submit" class="btn btn-dark">Login</button>    
            </div>

        </form>            
    </div>
    
</div>

<%- include('partials/footer') %>